# ------------------------------------------------------------------------------
# Base Image
# ------------------------------------------------------------------------------

ARG BASE_IMAGE=ros:humble
FROM ${BASE_IMAGE}

# ------------------------------------------------------------------------------
# Runtime Configuration
# ------------------------------------------------------------------------------

USER root
SHELL ["/bin/bash", "-c"]
ARG DEBIAN_FRONTEND=noninteractive

# ------------------------------------------------------------------------------
# Workspace Setup
# ------------------------------------------------------------------------------

ENV WORKSPACE=/ros2_ws
WORKDIR ${WORKSPACE}

# ------------------------------------------------------------------------------
# Copy Workspace Files
# ------------------------------------------------------------------------------

COPY . .

# ------------------------------------------------------------------------------
# Default Startup Command
# ------------------------------------------------------------------------------

CMD ["bash"]
